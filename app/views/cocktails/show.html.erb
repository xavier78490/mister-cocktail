<h1><%= @cocktail.name %></h1>

<ul>
<% @cocktail.doses.each do |dose| %>
	<li>
		<%= dose.ingredient.name %> - <%= dose.description %>
		<%= link_to "delete", dose_path(dose), method: :delete %>
	</li>
<% end %>
</ul>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Back', cocktails_path %>
